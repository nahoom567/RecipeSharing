<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15dp"
    tools:context=".AddRecipes">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginBottom="50dp"
        android:layout_marginTop="0dp"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />


    <TextView
        android:id="@+id/explanation"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/explanation_to_user"
        android:textSize="20dp"
        />


    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/editNameRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="enter name of recipe" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/editInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="enter instructions to the recipe"
        />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/editIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="enter an ingredient"
        />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/ingredientsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="press to add ingredient"
        />



</LinearLayout>